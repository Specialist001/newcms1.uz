{% extends "layout.twig" %}

{% block content %}
<main>
    <div class="ui container">
        <div class="ui grid">
            <div class="sixteen wide column">
                <div class="col page-title">
                    <h2 class="ui header">
                        {{ post.getAttribute('title') }}
                        <div class="sub header grey">
                            {{ baseUrl }}/post/{{ post.getAttribute('segment') }}
                        </div>
                    </h2>
                </div>
            </div>
        </div>
        <div class="ui grid">
            <div class="twelve wide column">
                <form id="formPage" class="ui form">
                    <input type="hidden" name="post_id" id="formPostId" value="{{ post.getAttribute('id') }}" />
                    <div class="field">
                        <label>{{ __('posts.edit.label_title') }}</label>
                        <input type="text" name="title" class="form-control" id="formTitle" value="{{ post.getAttribute('title') }}" placeholder="{{ __('posts.edit.placeholder_title') }}">
                    </div>
                    <div class="field">
                        <label>{{ __('posts.edit.label_content') }}</label>
                        <textarea name="content" id="redactor">{{ post.getAttribute('content') }}</textarea>
                    </div>
                </form>
            </div>
            <div class="four wide column">
                <div class="ui segments">
                    <div class="ui blue segment">
                        <h4>{{ __('posts.edit.update_segment_heading') }}</h4>
                    </div>
                    <div class="ui form segment">
                        <div class="field">
                            <label>{{ __('posts.edit.label_status') }}</label>
                            <select id="status" class="ui search dropdown">
                                <option value="publish"{% if post.getAttribute('status') == 'publish' %} selected{% endif %}>Опубликовано</option>
                                <option value="draft"{% if post.getAttribute('status') == 'draft' %} selected{% endif %}>В корзине</option>
                            </select>
                        </div>
                    </div>
                    <div class="ui secondary segment">
                        <p>{{ __('posts.edit.description_form_button') }}</p>
                        <button type="submit" class="ui primary button" onclick="post.update(this)">
                            {{ __('posts.edit.form_button') }}
                        </button>
                    </div>
                </div>

                <div class="ui segments">
                    <div class="ui blue segment">
                        <h4>{{ __('posts.edit.setting_segment.heading') }}</h4>
                    </div>
                    <div class="ui form segment">
                        <div class="field">
                            <label>{{ __('posts.edit.setting_segment.label_type') }}</label>
                            <select id="type" class="ui search dropdown">
                                <option value="page">Basic</option>
                                {% for key,type in pageTypes %}
                                    <option value="{{ key }}"{% if post.getAttribute('type') == key %} selected{% endif %}>
                                        {{ type }}
                                    </option>
                                {% endfor %}
                                <?php endforeach; ?>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="ui segments">
                    <div class="ui blue segment">
                        <input class="upload-file" type="file" multiple="multiple" accept=".txt,image/*" style="display: none;">
                        {% if image %}
                            <img class="ui medium bordered image post-image" src="{{ image.link }}">
                        {% else %}
                            <img class="ui medium bordered image post-image" src="https://semantic-ui.com/images/wireframe/white-image.png">
                        {% endif %}
                        <br>
                        <button class="ui primary button upload-post-image">
                            Add image
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}